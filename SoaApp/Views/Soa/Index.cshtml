@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom">
            <h2 class="text-primary">Statement of Account</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label class="float-right">Customer</label>
                </div>
                <div class="col-8">
                    <input id="customer" name="customer" type="number" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label class="float-right">Company Code</label>
                </div>
                <div class="col-8">
                    <input id="company" name="company" type="number" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label class="float-right">Statement as of</label>
                </div>
                <div class="col-8">
                    <input id="asof" name="asof" type="date" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control" asp-action="GenerateSoa">Generate</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>